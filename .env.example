# データベース設定（ConoHa VPS MySQL）
DB_HOST=your-conoha-vps-ip-address
DB_PORT=3306
DB_USER=app_user
DB_PASSWORD=change_this_strong_password
DB_NAME=calendar_db
DB_SSL_CA=/app/certs/mysql-ca.pem
# ローカル開発時はSSLなしでOK、本番環境ではSSL必須

# NextAuth認証
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=generate_with_openssl_rand_base64_32

# アプリケーションのベースURL（省略可、NEXTAUTHURLがフォールバックとして使用されます）
# NEXT_PUBLIC_BASE_URL=https://your-domain.com

# Discord OAuth設定
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_GUILD_ID=your_discord_server_id
DISCORD_REQUIRED_ROLE_ID=your_member_role_id
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# GCP Cloud Storage設定（画像保存用）
GCP_PROJECT_ID=your-gcp-project-id
GCS_KEY_FILE_PATH=/app/certs/gcp-service-account.json
GCS_BUCKET_NAME=your-bucket-name

# セキュリティ設定
ENABLE_MEMBERSHIP_CHECK=true
AUTO_DRAW_API_KEY=generate_with_openssl_rand_base64_32

# Node環境
NODE_ENV=production
